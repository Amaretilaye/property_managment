<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rent_payment_report_wizard_form" model="ir.ui.view">
        <field name="name">rent.payment.report.wizard.form</field>
        <field name="model">rent.payment.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Rent Payment Report">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="status"/>
                </group>
                <footer>
                    <button name="generate_excel_report" string="Generate Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_rent_payment_report_wizard" model="ir.actions.act_window">
        <field name="name">Generate Rent Payment Report</field>
        <field name="res_model">rent.payment.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_rent_payment_report"
              name="Payment Report Excel"
              parent="menu_lease_reports_root"
              sequence="2"
              action="action_rent_payment_report_wizard"/>
</odoo>