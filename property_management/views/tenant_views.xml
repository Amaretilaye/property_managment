<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tenant_list" model="ir.ui.view">
        <field name="name">tenant.list.views</field>
        <field name="model">tenant.management</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="id_number"/>
                <field name="lease_ids" widget="many2many_tags" options="{'no_create': True}"/>
            </list>
        </field>
    </record>
    <record id="view_property_form" model="ir.ui.view">
    <field name="name">property.form</field>
    <field name="model">property.management</field>
    <field name="arch" type="xml">
    <form>
        <sheet>
            <group>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="id_number"/>
                <field name="lease_ids" widget="many2many_tags" options="{'no_create': True}"/>
            </group>
        </sheet>
    </form>
</odoo>