<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_rent_payment_excel_wizard_form" model="ir.ui.view">
        <field name="name">rent.payment.excel.wizard.form</field>
        <field name="model">rent.payment.excel.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Rent Payment Excel Report">
                <sheet>
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group>
                            <field name="status"/>
                        </group>
                    </group>

                    <div class="oe_right">
                        <a t-attf-href="/web/content/rent.payment.excel.wizard/{{id}}/file/{{filename}}?download=true"
                           class="btn btn-primary">
                            Download Excel Report
                        </a>
                    </div>

                    <footer>
                        <button name="generate_excel_report" type="object" string="Generate Excel Report" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for the wizard -->
    <record id="action_rent_payment_excel_wizard" model="ir.actions.act_window">
        <field name="name">Generate Rent Payment Excel Report</field>
        <field name="res_model">rent.payment.excel.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_rent_payment"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>