<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_lease_management_list" model="ir.ui.view">
        <field name="name">lease.management.list.views</field>
        <field name="model">lease.management</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="tenant_id"/>
                <field name="property_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="monthly_rent" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'active'"
                       decoration-danger="state == 'expired'"/>
                <field name="note"/>
                <field name="payment_ids" widget="many2many_tags" options="{'no_create': True}"/>
            </list>
        </field>
    </record>
    <record id="view_lease_management_form" model="ir.ui.view">
        <field name="name">lease.management.form</field>
        <field name="model">lease.management</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="tenant_id"/>
                        <field name="property_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="monthly_rent" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="state" widget="badge"
                               decoration-success="state == 'active'"
                               decoration-danger="state == 'expired'"/>
                        <field name="note"/>
                        <field name="payment_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>